<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- Style for Questions. -->
    <style name="questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginForTextView</item>
        <item name="android:layout_marginBottom">@dimen/marginForTextView</item>
        <item name="android:background">@drawable/bg_style</item>
        <item name="android:padding">@dimen/paddingForTextView</item>
        <item name="android:textColor">@color/colorOfText</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>

    <!-- Style for Answers. -->
    <style name="answers">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">@color/colorOfCircle</item>
    </style>

    <!-- Style for Button. -->
    <style name="buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginTopForButton</item>
        <item name="android:background">@drawable/bg_style</item>
        <item name="android:padding">@dimen/paddingForButton</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:textColor">@color/colorOfText</item>
    </style>

    <!-- Style for TextViews (Name and Result). -->
    <style name="nameAndResult">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorOfNameAndResult</item>
        <item name="android:textSize">@dimen/textSizeForNameAndResult</item>

    </style>

</resources>
